<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_laporan_hunian_mk"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="30dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama User"
                android:textColor="@color/oranye"
                android:fontFamily="@font/roboto_medium"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat : Jakarta"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telepon : 8644795"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/jml_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Supply : 3"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/jml_beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Pembelian : 3"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>